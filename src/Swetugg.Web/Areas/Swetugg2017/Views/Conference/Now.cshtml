
@{
    ViewBag.Title = "Now";
    Layout = "~/Areas/Swetugg2017/Views/Shared/_LayoutNow.cshtml";
}

<style>
.now-section > .container {
    padding-top: 20px;
    padding-bottom: 50px;
    margin-left: 15px;
    margin-right: 15px;
}

</style>

<section id="now" class="even-section content-section text-center" ng-controller="NowController">
    <div class="now-section">
        <div class="container">
            <div class="row">
                <h2>Just nu <small>{{ currentSlot.Start | date: 'HH:mm' }} - {{ currentSlot.End | date: 'HH:mm' }}</small></h2>

                <div ng-if="currentSlot.Title">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                {{ currentSlot.Title }}
                            </h3>
                        </div>
                    </div>
                </div>
                <div ng-if="!currentSlot.Title" ng-repeat="session in currentSlot.Sessions">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                {{ session.Name }}
                            </h3>
                        </div>
                        <div class="panel-body">
                            <div style="margin-bottom: 15px;" trunk8="{text: session.Description, more: '+more', less: '-less', expendable: true, resizable: false}">
                            </div>
                            <div style="float: right; margin-left: 20px;">
                                <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                                {{ session.Room }}
                            </div>
                            <div style="float: right;">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                <span ng-repeat="speaker in session.Speakers"><span ng-if="$index > 0">, </span>{{ speaker.Name }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <h2>Kommande <small>{{ nextSlot.Start | date: 'HH:mm' }} - {{ nextSlot.End | date: 'HH:mm' }}</small></h2>

                <div ng-if="nextSlot.Title" class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            {{ nextSlot.Title }}
                        </h3>
                    </div>
                </div>
                <div ng-if="!nextSlot.Title" ng-repeat="session in nextSlot.Sessions">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                {{ session.Name }}
                            </h3>
                        </div>
                        <div class="panel-body">
                            <div style="margin-bottom: 15px;" trunk8="{text: session.Description, more: '+more', less: '-less', expendable: true, resizable: false}">
                            </div>
                            <div style="float: right; margin-left: 20px;">
                                <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                                {{ session.Room }}
                            </div>
                            <div style="float: right;">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                <span ng-repeat="speaker in session.Speakers"><span ng-if="$index > 0">, </span>{{ speaker.Name }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

