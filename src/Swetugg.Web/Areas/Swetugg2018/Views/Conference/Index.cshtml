    ViewBag.Title = "Swetugg - a conference in the spirit of Swenug";
    ViewBag.TransformNavBar = true;

    Conference conference = ViewBag.Conference;

    IEnumerable<Slot> slots = ViewBag.Slots;
    if (slots == null)
    {
        slots = new List<Slot>();
    }
    IEnumerable<Room> rooms = ViewBag.Rooms;
    if (rooms == null)
    {
        rooms = new List<Room>();
    }
