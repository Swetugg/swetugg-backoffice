    if (speakers == null)
    {
        speakers = new List<Speaker>();
    }
    IDictionary<int, IDictionary<string, SpeakerImage>> speakerImages = ViewBag.SpeakerImages;
    if (speakerImages == null)
    {
        speakerImages = new Dictionary<int, IDictionary<string, SpeakerImage>>();
    }
